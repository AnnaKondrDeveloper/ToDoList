<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title> To Do List </title>
	<link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
<div class="box">
	<div class="box_buttons">
		<button class="button"><a href="/home">HOME</a></button>
		<button class="button"><a href="/work">WORK</a></button>
		<button class="button"><a href="/buy">BUY</a></button>
		<button class="button"><a href="/wish">WISH</a></button>
		<button class="button"><a href="/">TODAY</a></button>
	</div>
<div class="box_wrapper">
	<div class="box_title" id="heading">
		<h1> <%= listTitle %> </h1>
	</div>
	<div class="box_list">
		<% newListItems.forEach(function(item){ %>
			<form action="/delete" method="post">
			<div class="item">
					<input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
					<p><%= item.name%></p>
				</div>
				<input type="hidden" name="listName" value="<%= listTitle %>">
			</form>
			<% }) %>
		<form class="item" action="/" method="post">
			<input type="text" name="newItem" placeholder="New Item" autocomplete="off">
			<button class="item_button" type="su.bmit" name="list" value=<%= listTitle %>></button>
		</form>
	</div>
</div>
</div>
<%- include("footer") -%>
</body>
</html>